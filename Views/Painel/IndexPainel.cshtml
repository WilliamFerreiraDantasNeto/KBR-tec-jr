@{
    ViewData["Title"] = "Usuários";
    Layout = "~/Views/Shared/_LayoutPainel.cshtml";
}

<main class="col h-100 text-light p-4">
    <div class="d-flex justify-content-center mb-4">
        <h1 class="h3">Usuários</h1>
    </div>
    <div class="d-flex justify-content-center mb-4">
        <div class="bg-dark d-flex flex-row rounded mx-4 p-2 row-gap-1">
            <a asp-controller="Painel" asp-action="CadastroUsuario" class="submenu-link link-light text-decoration-none rounded p-2">
                <small class="d-flex justify-content-between align-items-center">Cadastrar</small>
            </a>
            <a asp-controller="Painel" asp-action="Usuarios" class="submenu-link link-light text-decoration-none rounded p-2">
                <small class="d-flex justify-content-between align-items-center">Listagem de Usuários</small>
            </a>
        </div>
    </div>

    <div class="d-flex justify-content-center mb-4">
        <h1 class="h3">Campeonatos</h1>
    </div>
    <div class="d-flex justify-content-center mb-4">
        <div class="bg-dark d-flex flex-row rounded mx-4 p-2 row-gap-1">
            <a asp-controller="Painel" asp-action="CadastroCampeonato" class="submenu-link link-light text-decoration-none rounded p-2">
                <small class="d-flex justify-content-between align-items-center">Cadastrar</small>
            </a>
            <a asp-controller="Painel" asp-action="Campeonatos" class="submenu-link link-light text-decoration-none rounded p-2">
                <small class="d-flex justify-content-between align-items-center">Listagem de Campeonatos</small>
            </a>
        </div>
    </div>
</main>
